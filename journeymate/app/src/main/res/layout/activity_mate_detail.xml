<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mate_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mate.MateDetailActivity">

    <include
        android:id="@+id/mate_detail_toolbar"
        layout="@layout/activity_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/detail_mate_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/pretendardregular"
        android:text="여행 그룹 이름"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mate_detail_toolbar"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/mate_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/pretendardregular"
        android:text="메이트"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/user_profile_1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_mate_name"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/user_profile_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="115dp"
        app:layout_constraintTop_toBottomOf="@+id/mate_detail_toolbar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="126dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/user_profile_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="112dp"
        app:layout_constraintStart_toEndOf="@+id/user_profile_1"
        app:layout_constraintTop_toBottomOf="@+id/mate_detail_toolbar"
        tools:ignore="MissingConstraints"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/user_profile_3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="112dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/user_profile_2"
        app:layout_constraintTop_toBottomOf="@+id/mate_detail_toolbar"
        tools:ignore="MissingConstraints"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/destination_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/pretendardregular"
        android:text="여행지"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mate_text_title"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/destination_text_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="212dp"
        android:fontFamily="@font/pretendardregular"
        android:text="여행지 결과"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/destination_text_title"
        app:layout_constraintTop_toBottomOf="@+id/mate_detail_toolbar"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/start_end_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/pretendardregular"
        android:text="기간"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/destination_text_title"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/start_end_date_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/pretendardregular"
        android:text="시작 날짜 ~ 끝 날짜"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/start_end_date_title"
        app:layout_constraintTop_toBottomOf="@+id/destination_text_result"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mate_group_chat_btn"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginBottom="272dp"
        android:background="@drawable/service_button"
        android:fontFamily="@font/pretendardregular"
        android:text="그룹 채팅방"
        android:textSize="18dp"
        android:textStyle="bold"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mate_group_check_list_btn"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginBottom="272dp"
        android:background="@drawable/service_button"
        android:fontFamily="@font/pretendardregular"
        android:text="준비물"
        android:textSize="18dp"
        android:textStyle="bold"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.646"
        app:layout_constraintStart_toEndOf="@+id/mate_group_chat_btn"
        app:rippleColor="@color/white" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mate_group_journey_btn"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginBottom="192dp"
        android:background="@drawable/service_button"
        android:fontFamily="@font/pretendardregular"
        android:text="일정 관리"
        android:textSize="18dp"
        android:textStyle="bold"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mate_group_chat_btn"
        app:layout_constraintVertical_bias="1.0"
        app:rippleColor="@color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mate_group_document_btn"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginBottom="192dp"
        android:background="@drawable/service_button"
        android:fontFamily="@font/pretendardregular"
        android:text="문서 관리"
        android:textSize="18dp"
        android:textStyle="bold"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.646"
        app:layout_constraintStart_toEndOf="@+id/mate_group_journey_btn"
        app:layout_constraintTop_toBottomOf="@+id/mate_group_check_list_btn"
        app:layout_constraintVertical_bias="1.0"
        app:rippleColor="@color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mate_group_contents_btn"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="112dp"
        android:background="@drawable/service_button"
        android:fontFamily="@font/pretendardregular"
        android:text="콘텐츠 관리"
        android:textSize="18dp"
        android:textStyle="bold"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mate_group_journey_btn"
        app:rippleColor="@color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mate_group_delete"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/large_button"
        android:fontFamily="@font/pretendardregular"
        android:text="그룹 삭제"
        android:textSize="18dp"
        android:textStyle="bold"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mate_group_contents_btn"
        app:layout_constraintVertical_bias="1.0"
        app:rippleColor="@color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mate_group_modify"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/large_button"
        android:fontFamily="@font/pretendardregular"
        android:text="그룹 수정"
        android:textSize="18dp"
        android:textStyle="bold"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toEndOf="@+id/mate_group_delete"
        app:rippleColor="@color/white" />


</androidx.constraintlayout.widget.ConstraintLayout>